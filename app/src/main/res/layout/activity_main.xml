<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:scrollbars="none"
    android:background="@color/background_color_white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="oko.tm.car_control.MainActivity"
        android:background="@color/background_color_white">

        <TextView
            android:text="@string/text_1"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView_1"
            android:background="@color/background_color_white"
            android:phoneNumber="true"
            android:typeface="serif" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton1_on"

            android:layout_below="@+id/textView_1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/alarm_on"
            android:background="@color/background_color_white"/>

        <TextView
            android:text="@string/text_on"
            android:layout_width="120dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/textView_1_on"
            android:textAlignment="center"
            android:background="@color/background_color_white"
            android:layout_alignLeft="@+id/imageButton1_on"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/imageButton1_on"
            android:textIsSelectable="false"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton1_off"
            android:layout_alignTop="@+id/imageButton1_on"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"

            android:src="@drawable/alarm_off"
            android:background="@color/background_color_white" />

        <TextView
            android:text="@string/text_off"
            android:layout_width="120dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/textView_1_off"
            android:textAlignment="center"
            android:background="@color/background_color_white"
            android:layout_alignLeft="@+id/imageButton1_off"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/imageButton1_off"
            android:visibility="visible" />


        <TextView
            android:text="@string/text_2"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_1_on"
            android:layout_centerHorizontal="true"

            android:id="@+id/textView_2"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:background="@color/background_color_white"
            android:typeface="serif" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2_on"

            android:layout_below="@+id/textView_2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/block_on"
            android:background="@color/background_color_white"/>

        <TextView
            android:text="@string/text_on"
            android:layout_width="120dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/textView_2_on"
            android:textAlignment="center"
            android:background="@color/background_color_white"
            android:layout_alignLeft="@+id/imageButton2_on"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/imageButton2_on"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2_off"
            android:layout_alignTop="@+id/imageButton2_on"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"

            android:src="@drawable/block_off"
            android:background="@color/background_color_white" />

        <TextView
            android:text="@string/text_off"
            android:layout_width="120dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/textView_2_off"
            android:textAlignment="center"
            android:background="@color/background_color_white"
            android:layout_alignLeft="@+id/imageButton2_off"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/imageButton2_off"
            android:visibility="visible" />




