        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_2_on"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true">
        </Spinner>

        <Button
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_send_command"
            android:text="Отправить команду"
            android:layout_width="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true">
        </Button>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/web_server"
            android:id="@+id/textView_server"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btn_send_command"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/manuf"
            android:id="@+id/textView_manuf"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView_server"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</ScrollView>
